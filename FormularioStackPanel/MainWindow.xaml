<Window x:Class="FormularioStackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormularioStackPanel"
        mc:Ignorable="d"
        Icon="assets/32.ico"
        Title="Formulario StackPanel"
        Height="450"
        Width="800"
        MinWidth="500"
        MaxWidth="800"
        >
    <StackPanel Margin="5"
                MinWidth="400">
        <StackPanel 
                    MinHeight="60">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1"
                                     StartPoint="0.5,0">
                    <GradientStop Color="White"
                                  Offset="0.93" />
                    <GradientStop Color="#FF41A432"
                                  Offset="0.039" />
                </LinearGradientBrush>
            </StackPanel.Background>
            <Label FontWeight="Bold"
                       FontSize="16">Nombre</Label>
            <TextBox
                     MinWidth="300"
                     Margin="5,10,5,15"></TextBox>
            </StackPanel>

        <StackPanel 
                    MinHeight="60">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1"
                                     StartPoint="0.5,0">
                    <GradientStop Color="#FFBFF3FF"
                                  Offset="0.4" />
                    <GradientStop Color="#FF0DD3FF"
                                  Offset="0.13" />
                    <GradientStop Color="#FFF9F9F9"
                                  Offset="0.993" />
                </LinearGradientBrush>
            </StackPanel.Background>

            <Label FontSize="16"
                       FontWeight="Bold">
                 Dirección</Label>
            <TextBox Margin="5,10,5,15"
                     MinWidth="300"></TextBox>
            </StackPanel>
        <StackPanel
                    MinHeight="60">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1"
                                         StartPoint="0.5,0">
                        <GradientStop Color="White"
                                      Offset="1" />
                        <GradientStop Color="#FFA420C1" />
                    </LinearGradientBrush>
                </StackPanel.Background>
                <Label FontSize="16"
                   FontWeight="Bold">Correo electrónico</Label>
            <TextBox MinWidth="600"
                     Margin="5,10,5,15"
                     HorizontalAlignment="Left"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
                <Button Margin="4"
                        MinHeight="25"
                        MinWidth="100">Aceptar</Button>
                <Button Margin="4"
                    MinHeight="25"
                    MinWidth="100">Cancelar</Button>
            </StackPanel>
        </StackPanel>
</Window>
